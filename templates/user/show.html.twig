{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<h1>User</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ user.id }}</td>
			</tr>
			<tr>
				<th>Prénom</th>
				<td>{{ user.firstName }}</td>
			</tr>
			<tr>
				<th>Thialon</th>
				<td>{{ user.lastName }}</td>
			</tr>
			<tr>
				<th>Typologie Familiale</th>
				<td>{{ user.familyTypology }}</td>
			</tr>
			<tr>
				<th>Date de naissance</th>
				<td>{{ user.birthday ? user.birthday|date('d-m-Y') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_user_index') }}">Retourner à l'index</a>

	<a href="{{ path('app_user_edit', {'id': user.id}) }}">Editer</a>

	{{ include('user/_delete_form.html.twig') }}
{% endblock %}
